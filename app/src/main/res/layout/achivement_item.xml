<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="35dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/achivement_item_CV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="@dimen/home_corners"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"
        app:cardBackgroundColor="#00000000"
        android:outlineAmbientShadowColor="#00000000"
        android:outlineSpotShadowColor="#00000000">

        <carbon.widget.ImageView
            android:id="@+id/avatar_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#00000000"
            android:layout_margin="3dp"
            app:carbon_cornerRadius="@dimen/home_corners" />

        <TextView
            android:id="@+id/achivement_text"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:text="Online/Offline"
            android:textSize="13sp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"/>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>